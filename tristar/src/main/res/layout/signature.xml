<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ph_logo"
    android:orientation="vertical"
    android:weightSum="100"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/whitecolor"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >
         <ImageView
            android:id="@+id/imageButtonbackpro"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:background="@android:color/white"
            android:src="@drawable/imagesleft"
             tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/textViewbacktodeliveryPOD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="2"
            android:text="@string/signatureCancel"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/signatureTitle"
            android:textColor="@color/blackcolor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_court_job_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/whitecolor"
        android:gravity="center"
        android:text="@string/val_work_order_id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutSign"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="30"
        android:background="@drawable/buttonbg"
        android:orientation="horizontal"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayoutSignButtons1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/newSign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_corner"
                android:textColor="@color/blackcolor"
                android:text="New Signature"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSignButtons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_corner"
                android:text="Clear Signature"
                android:textColor="@color/blackcolor"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/getsign"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_corner"
                android:text="Save Signature"
                android:textColor="@color/blackcolor"
                tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>