<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ph_logo"
    android:orientation="vertical"
    tools:context=".VoiceRecorder" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/whitecolor"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageButtonbacktofinalstatus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|left"
            android:src="@drawable/imagesleft"
            android:paddingLeft="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/empty_string"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/textViewbacktofinalstatus"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center|left"
            android:text="@string/back"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/serveaudio_finalstatus"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="60dp"
            android:layout_height="1dp" />
    </TableRow>

    <TextView
        android:id="@+id/txt_voice_worker"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/whitecolor"
        android:gravity="center"
        android:text="@string/val_work_order_id"
        android:textColor="@color/blackcolor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewcountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/whitecolor"
        android:text="@string/empty_string"
        android:textColor="@color/blackcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/imageButtonMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/micro_phone"
        android:contentDescription="@string/empty_string" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

        <ImageButton
            android:id="@+id/imageButtonRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/record"
            android:contentDescription="@string/empty_string" />
         <ImageButton
             android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/record_pause_"
            android:visibility="gone"
            android:contentDescription="@string/empty_string" />

        <ImageButton
            android:id="@+id/imageButtonPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/pause"
            android:contentDescription="@string/empty_string" />

        <ImageButton
            android:id="@+id/imageButtonStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/stop"
            android:contentDescription="@string/empty_string" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCompleteServe"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
         android:background="@drawable/button_corner"
        android:text="@string/btncompleteserve"
        android:textColor="@color/blackcolor" />

    <Button
        android:id="@+id/buttonEnterAttempt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
         android:background="@drawable/button_corner"
        android:text="@string/btnenterattempt"
        android:textColor="@color/blackcolor" />

    <Button
        android:id="@+id/buttonDeleteAttempt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_corner"
        android:text="@string/btndeleteattempt"
        android:textColor="@color/blackcolor" />

    <Button
        android:id="@+id/buttonRecordCancel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
         android:background="@drawable/button_corner"
        android:text="@string/btnrecordercancel"
        android:textColor="@color/blackcolor" />

</LinearLayout>