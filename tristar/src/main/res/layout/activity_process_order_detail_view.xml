<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ph_logo"
    android:dividerPadding="22dip"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whitecolor"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/imageButtonbackpro"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:background="@android:color/white"
            android:src="@drawable/imagesleft"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/textviewbackpro"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/back"
            android:textColor="@color/blackcolor"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="phone"
            android:text="@string/process_order_detail_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits" />

        <View
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_category"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/whitecolor"
        android:gravity="center"
        android:text="@string/val_work_order_id"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blackcolor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:textColor="@color/blackcolor"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/priority"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center"
                        android:text="@string/process_order_detail_priority"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:textColor="@color/blackcolor"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/due_date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_duedate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/val_date"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@color/blackcolor"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/process_order_detail_servee"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_servee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:singleLine="true"
                    android:text="@string/process_order_detail_serveeval"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@color/blackcolor"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:paddingTop="5dp"
                    android:text="Phone No :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@color/blackcolor"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:paddingTop="5dp"
                    android:text="Email :"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/textView_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue_text"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/address"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whitecolor"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="20dp"
                android:layout_weight="100"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                tools:ignore="RtlHardcoded">

                <LinearLayout
                    android:id="@+id/finalstatus_lblhome_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:gravity="center"
                    tools:ignore="NestedWeights"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/finalstatus_lblhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_string"
                            android:textColor="@color/whitecolor"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="25">

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/val_address"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/recieved"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whitecolor"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/txt_recieveddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whitecolor"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/txt_recievedtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/whitecolor"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/linearentity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/entity_finalstatus"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/check_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="92dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="center"
                        tools:ignore="RtlHardcoded" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/Agentforservice_finalservice"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/edt_agentforservice"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundedcorner"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLength="100"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:text="@string/agenttitle_finalservice"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/edt_agenttitle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/roundedcorner"
                    android:focusableInTouchMode="true"
                    android:gravity="left|center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLength="100"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/blackcolor"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />


            </LinearLayout>


            <Button
                android:id="@+id/btntake_pic"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/process_order_detail_take_picture_btn"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:id="@+id/special_instruction_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/Special_Instruction"
                    android:textAllCaps="false"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnspecial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:padding="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/whitecolor"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAddaddress"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/add_address"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnRecord"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/process_order_detail_record_diligence_btn"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnfinal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/process_order_detail_final_status_btn"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button1_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/edit_search_library"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_serveaudio"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_corner"
                    android:text="@string/serveaudio_finalstatus"
                    android:textColor="@color/blackcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/audio_icon"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/volumehigh"
                    android:visibility="gone"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </LinearLayout>

            <Button
                android:id="@+id/btnprev"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/process_order_detail_prev_diligence_btn"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnpdfview"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_corner"
                android:text="PDF View"
                android:textColor="@color/blackcolor"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>