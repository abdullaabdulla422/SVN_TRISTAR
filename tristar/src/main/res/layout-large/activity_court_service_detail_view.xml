<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ph_logo"
    android:dividerPadding="22dip"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/whitecolor"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/imageButtonback"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:src="@drawable/imagesleft"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/txt_backfinalstatus"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="@string/back"
            android:textColor="@color/blackcolor"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Court Service"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"/>

    </LinearLayout>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blackcolor"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_category"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/whitecolor"
            android:gravity="center"
            android:text="@string/val_work_order_id"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStatus"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_corner"
            android:text="Status"
            android:textColor="@color/blackcolor"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/blackcolor">

                    <TextView
                        android:id="@+id/txt_custumer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/val_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/txt_custumer_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/val_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/darker_gray" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackcolor"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    >

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/val_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/val_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />


                    <TextView
                        android:id="@+id/txt_clientaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="@string/val_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackcolor"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:text="@string/requestor"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="15sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/txt_requestor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/val_name"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="16sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/txt_phonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_text"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />



                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackcolor"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:text="@string/name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="@string/val_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackcolor"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/court"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/txt_court"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/val_court"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackcolor"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:visibility="gone"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textColor="@color/blackcolor"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackcolor"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:text="@string/recieved"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="15sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/due_date"
                            android:layout_weight="0.35"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="15sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackcolor"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:id="@+id/txt_recieveddate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                        <TextView
                            android:id="@+id/txt_duedate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/val_date"
                            android:layout_weight="0.35"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackcolor"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:id="@+id/txt_recievedtime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/whitecolor"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackcolor"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:text="@string/court_service_inst"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/txt_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:text="@string/val_instructions"
                        android:layout_weight="0.35"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackcolor"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:text="@string/priority"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:id="@+id/txt_priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="@string/val_standard"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/whitecolor"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <include layout="@layout/activity_court_service_detail_include" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>