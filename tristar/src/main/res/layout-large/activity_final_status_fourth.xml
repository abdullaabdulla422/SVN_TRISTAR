            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/gps"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

